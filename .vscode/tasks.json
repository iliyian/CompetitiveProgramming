{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: clang++.exe 生成活动文件",
      "command": "C:\\LLVM\\bin\\clang++.exe",
      "args": [
        "-fcolor-diagnostics",
        "-fansi-escape-codes",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe",
        "--target=x86_64-mingw-w32"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "调试器生成的任务。"
    }
  ],
  "version": "2.0.0"
}